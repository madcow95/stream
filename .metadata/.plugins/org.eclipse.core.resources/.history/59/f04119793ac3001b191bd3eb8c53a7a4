<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="customLoginSuccess" class="com.moviestream.movie.member.security.LoginAccessHandler"></bean>
	<bean id="bcryptPasswordEncoder" class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder"></bean>
	
	<security:http>
	
		<security:intercept-url pattern="/" access="permitAll"/>
		<security:intercept-url pattern="/member/securityMember" access="hasRole('ROLE_MEMBER')"/>
		<security:intercept-url pattern="/member/securityAdmin" access="hasRole('ROLE_ADMIN', 'ROLE_MEMBER')"/>
		<security:intercept-url pattern="/admin/adminhome" access="hasRole('ROLE_ADMIN')"/>
		
		<security:form-login login-page="/member/login" authentication-success-handler-ref="customLoginSuccess"/>
		
		<security:logout logout-url="/logout" invalidate-session="true"/>
		<security:access-denied-handler error-page="/member/login_fail"/>
	</security:http>
	
	<security:authentication-manager>
		<security:authentication-provider>
			<security:jdbc-user-service data-source-ref="dataSource" authorities-by-username-query="select id, pwd, enabled from tbl_member where id='admin91'"/>
			<security:password-encoder ref="bcryptPasswordEncoder"/>
		</security:authentication-provider>
	</security:authentication-manager>

</beans>
