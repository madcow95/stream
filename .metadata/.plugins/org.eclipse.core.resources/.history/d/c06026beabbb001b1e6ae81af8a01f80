package com.moviestream.movie.persistence.impl;

import java.util.List;

import org.apache.ibatis.session.SqlSession;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Repository;

import com.moviestream.movie.domain.BoardDTO;
import com.moviestream.movie.domain.Criteria;
import com.moviestream.movie.persistence.IBoardDAO;

@Repository
public class BoardDAOImpl implements IBoardDAO{

	@Autowired
	private SqlSession session;
	
	@Override
	public List<BoardDTO> boardList(Criteria cri) throws Exception {
		
		return session.selectList("boardList", cri);
	}

	@Override
	public int getTotalCnt() throws Exception {
		
		return session.selectOne("getTotalCnt");
	}

}
