package com.moviestream.movie;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;

import com.moviestream.movie.domain.BoardDTO;
import com.moviestream.movie.domain.Criteria;
import com.moviestream.movie.domain.PageDTO;
import com.moviestream.movie.service.IBoardService;

import lombok.extern.log4j.Log4j;

@Controller
@RequestMapping("/board")
@Log4j
public class BoardController {
	
	@Autowired
	private IBoardService service;
	
	@RequestMapping("/list")
	public void boardList(Model model, Criteria cri) throws Exception {
		log.info(cri);
		model.addAttribute("boardList", service.boardList(cri));
		model.addAttribute("pageMaker", new PageDTO(cri, service.getTotalCnt()));
	}
	
	@RequestMapping("/read")
	public void read(Criteria cri, @RequestParam("articleno") int articleno, Model model) throws Exception {
		model.addAttribute("boardList", service.read(articleno));
		model.addAttribute("pageNum", articleno);
	}
}
